    <![endif]-->

    <meta property="fb:app_id"      content="<%= ENV['FACEBOOK_APP_ID'] %>"/>
    <meta property="og:type"        content="website" />
    <meta property="og:url"         content="http://2015citoyens.be" />
    <meta property="og:title"       content="2015 Citoyens" />
